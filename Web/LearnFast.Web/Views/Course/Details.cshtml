@model LearnFast.Web.ViewModels.Course.CourseViewModel

@{
    this.ViewData["Title"] = "Course details";
    this.ViewData["Style"] = "details.css";
}

<section>
    <h1>@this.ViewData["Title"]</h1>
    <h2>@Model.Category.Name (Category)</h2>
    <hr />
    <h3>@Model.Title</h3>>
    <div class="overview">
        <h4>Description</h4>
        <div class="description">@Model.Description</div>
        <hr />
        <h4>Overview</h4>
        <div class="additional-info">
            <div>
                <span>@Model.ReviewsCount reviews</span>
                <span>@Model.Sells students</span>
            </div>
            <div>Created by: @Model.Owner.FullName</div>
            <div>Language: @Model.Language.Name</div>
            <div>Difficulty: @Model.Difficulty</div>
            @if (Model.Price <= 0)
            {
                <div class="price">Free course</div>
            }
            else
            {
                <div class="price">@($"${Model.Price:F2}")<a asp-controller="Home" asp-action="Index"><i class="bi bi-bag-fill"></i></a></div>
            }
        </div>
    </div>
    <div class="main-image">
        <img src="@Model.MainImageUrl" accept="image/gif, image/jpeg, image/png">
    </div>
    <hr />
    <div class="requirments">
        <h4>Course requirments</h4>
        <p>
            @Model.Requirments;
        </p>
    </div>
    <div>
        <h4>Course content</h4>
        <div class="accordion" id="accordionExample">
            <div class="accordion-item col-xl-6">
                @if(Model.VideosCount == 0) {
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            No content yet.
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                        </div>
                    </div>
                }
                @foreach (var video in Model.Videos)
                {
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            @video.Title;
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            @*// video content*@
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>