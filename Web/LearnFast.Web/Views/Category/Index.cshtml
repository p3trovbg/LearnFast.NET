@model LearnFast.Web.ViewModels.Category.CategoryListViewModel

@{
    this.ViewData["Title"] = "Categories";
    this.ViewData["Style"] = "category.css";
}

<section>
    <h1>@this.ViewData["Title"]</h1>
    <hr />
    <div>
        @foreach (var category in Model.Categories)
        {
            <div class="category">
                <a asp-area=""
                   asp-controller="Course"
                   asp-action="Search"
                   asp-route-categoryId="@category.Id"
                   asp-route-categoryName="@category.Name">
                    @category.Name
                </a>
            </div>
        }
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="/css/category.css">
}